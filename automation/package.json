{
  "name": "automation",
  "version": "1.0.0",
  "license": "MIT",
  "main": "lib/index",
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && npm run lint && npm run build:ts",
    "build:ts": "tsc --module 'ES6' && renamer --find /.js$/ --replace .mjs \"lib/**\" && tsc",
    "clean": "rm -rf lib",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint --config tslint.json --project tsconfig.json --format stylish --fix 'src/**/*.ts'"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.0",
    "gulp-cache": "^1.1.0",
    "gulp-watch": "^5.0.1",
    "through2": "^3.0.0",
    "tslint": "^5.12.1"
  },
  "devDependencies": {
    "@types/fancy-log": "^1.3.0",
    "@types/gulp-cache": "^0.4.4",
    "@types/gulp-watch": "^4.1.34",
    "@types/through2": "^2.0.34",
    "concurrently": "^4.1.0",
    "renamer": "^1.1.1",
    "typescript": "^3.2.2"
  }
}
